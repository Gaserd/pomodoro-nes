{
  "name": "pomodoro-nes",
  "version": "0.1.0",
  "private": true,
  "description": "Desktop Pomodoro timer with retro NES UI, sounds, and daily coins (Electron)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder --win"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.pomodoro",
    "productName": "Pomodoro Timer",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "sound/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icon.png",
      "artifactName": "${productName}-Setup-${version}.exe"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "deleteAppDataOnUninstall": false
    }
  }
}


